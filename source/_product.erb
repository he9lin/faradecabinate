<div data-toggle="modal" data-target=".<%= item.modal_target %>" class="nf-item <%= item.modal_class %>">
  <div class="item-box">
    <img class="item-container" src="<%= item.image_src %>" alt="<%= item.name %>" />
    <div class="item-mask">
      <div class="item-caption">
        <h5 class="white"><%= item.name %></h5>
      </div>
    </div>
  </div>
</div>

<div class="modal <%= item.modal_target %>" tabindex="-1" role="dialog">
  <div class="modal-dialog modal-lg">
    <div class="modal-content">
       <div class="modal-header">
        <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">&times;</span></button>
        <h4 class="modal-title"><%= item.name %></h4>
      </div>
      <div class='row'>
        <div class='col-md-6'>
          <img src="<%= item.image_src %>" alt="<%= item.name %>" />
        </div>
        <div class='col-md-6'>
          <h3>Details</h3>
          <ul class='text-left'>
            <% descs.each do |desc| %>
              <li><%= desc.text %></li>
            <% end %>
          </ul>
        </div>
      </div>
    </div>
  </div>
</div>
